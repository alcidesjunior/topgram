<%if notice%>
  <script>
    Materialize.toast('<%=notice%>', 4000)
  </script>
<%end%>
    <% @topfotos.each do |topfoto| %>
      <div class="row">
        <div class="col s12 m12 l6 push-l3">
          <div class="card">
            <br>
            <div class="row">
              <div class="col s1">
                <img src="http://lorempixel.com/30/30/people/" class="circle">
              </div>
              <div class="col s11">
                <strong>Alcides Junior</strong>
                <small class="right" style="margin-right:10px">Há <%=time_ago_in_words(topfoto.created_at)%></small>
              </div>
            </div>
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag topfoto.foto.url %>
            </div>
            <div class="card-content">
                <span class="card-title"><%= topfoto.descricao %></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">Comentários<i class="material-icons right">close</i></span>
                <%topfoto.comments.each do |item|%>

                  <strong>Marcos JR</strong> <%=item.comentario%> - <small>Há <%=time_ago_in_words(item.created_at)%></small><br>

                <%end%>
            </div>
            <div class="card-action">
              <button class="white-text btn-flat waves-effect white btn-floating "><i class="material-icons red-text">favorite</i></button>
              <button class="white-text btn-flat waves-effect white btn-floating activator"><i class="material-icons black-text">chat_bubble_outline</i></button>
              <a href="/topfotos/<%=topfoto.id%>" class="white-text btn-flat waves-effect white btn-floating right" data-method="delete"><i class="material-icons black-text">delete</i></a>
              <div class="row">
                <%= form_for(:comment,url: comments_path) do |f| %>
                <div class="input-field col s12">
                  <input name="comment[comentario]" type="text" placeholder="Comente">
                  <input name="comment[topfoto_id]" type="hidden" value="<%=topfoto.id%>">
                </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
<div class="fixed-action-btn vertical">
  <a href="/topfotos/new" class="btn-floating btn-large waves-effect waves-light pink"><i class="material-icons">add</i></a>
</div>
